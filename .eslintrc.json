{
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jquery": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
        ],
        "semi-spacing": [
            "error",
            { "before": false, "after": true }
        ],
        "no-var": "error",
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "require-atomic-updates": "off",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "object-shorthand": "error",
        "require-await": "error",
        "vue/html-indent": [
            "error", 
            4
        ],
        "vue/max-attributes-per-line": ["error", {
            "singleline": 4,
            "multiline": 1
        }]
    }
}